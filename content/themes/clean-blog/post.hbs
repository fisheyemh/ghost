{{!< default}}

<div class="container-fluid">
    <div class="container">
        {{#post}}
            <div class="row">
                <div class="col-12">
                    <div class="jumbotron jumbotron-fluid {{#if
                            feature_image}}" style="background-image: url({{feature_image}}){{else}}no-cover{{/if}}">
                        <div class="container">
                            <h1 class="display-4">{{title}}</h1>
                            <p class="lead">This is a modified jumbotron that occupies the entire horizontal space of its
                                parent.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="post-meta">
                        <time datetime="{{date format="YYYY-MM-DD"}}" itemProp="datePublished">
                            Published on {{date format="MMMM DD, YYYY"}}
                        </time>
                        {{> "author-list"}}
                        {{> "post-tags"}}
                        <span class="reading-time">{{reading_time}}</span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <article itemScope itemType="http://schema.org/BlogPosting">
                        <section class="post-content" itemProp="articleBody">
                            {{content}}
                        </section>

                        <footer>
                            <h4>Condividi</h4>
                            <div class="row">
                                <div class="col-12">
                                    <section class="share">
                                        <a href="https://twitter.com/share?text={{title}}&url={{url
                                            absolute="true"}}" title="Twitter" onclick="window.open(this.href, 'twitter-share',
                                        'width=550,height=235');return false;"><i class="fab fa-twitter-square fa-2x"></i></a>&nbsp;
                                        <a href="https://www.facebook.com/sharer/sharer.php?u={{url
                                            absolute="true"}}" title="Facebook" onclick="window.open(this.href,
                                        'facebook-share','width=580,height=296');return false;"><i
                                            class="fab fa-facebook-square fa-2x"></i></a>
                                    </section>
                                </div>
                            </div>

                        </footer>
                    </article>
                </div>
            </div>

        {{/post}}
    </div>
</div>

{{#contentFor "scripts"}}
    <script src="{{asset "fitvids.min.js"}}"></script>
    <script>
        fitvids();
    </script>
{{/contentFor}}